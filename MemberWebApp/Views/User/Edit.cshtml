@using MemberWebApp.Controllers;
@model EditUserModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="row">
    <div class="col">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>

    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">


        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group mb-3">
                <label class="form-label" asp-for="FullName">Full name</label>
                <input type="text" class="form-control" placegolder="john doe" asp-for="FullName" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label" asp-for="Username">Username</label>
                <input type="text" class="form-control" placegolder="Username" asp-for="Username" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>


            <div class="form-group mb-3">
                <label class="form-label" asp-for="Role">Role</label>
                <select asp-for="Role" class="form-select">
                    <option value="">Please Select</option>
                    <option value="admin">Admin</option>
                    <option value="user">User</option>
                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Locked" />
                    <label class="form-check-label" asp-for="Locked">
                        Locked
                    </label>
                </div>
            </div>

            <div class="form-group mb-3">
                <button class="btn btn-primary " type="submit"><i class="fa-solid fa-save me-2"></i>Save</button>
            </div>

        </form>
    </div>
</div>